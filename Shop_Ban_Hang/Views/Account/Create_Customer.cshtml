@model Shop_Ban_Hang.Models.KhachHang

@{
	ViewBag.Title = "Tạo tài khoản";
	Layout = null;
}

<html>
<head>
	<!-- Theme style -->
	<link href="~/Content/login/adminlte.min.css" rel="stylesheet" />

	<!-- iCheck -->
	<link href="~/Content/login/blue.css" rel="stylesheet" />
</head>



<body class="hold-transition login-page">
	<div class="login-box">
		
		<!-- /.login-logo -->
		<div class="card">
			<div class="card-body login-card-body">
				<p class="login-box-msg">Tạo Tài Khoản</p>
				<form action="/Account/Create_Customer" method="post">
					@Html.AntiForgeryToken()
					@*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
					<div class="form-group has-feedback">
						@Html.TextBoxFor(m => m.Id, new { @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "auto" })
						@Html.ValidationMessageFor(m => m.Id)
						<span style="color:red">@Html.ValidationMessage("")</span>

					</div>

					<div class="form-group has-feedback">
						@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
						@Html.ValidationMessageFor(m => m.Password)
					</div>

					<div class="form-group has-feedback">
						@Html.TextBoxFor(m => m.Fullname, new { @class = "form-control", @placeholder = "Tên đầy đủ" })
						@Html.ValidationMessageFor(m => m.Fullname)
					</div>

					<div class="form-group has-feedback">
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
						@Html.ValidationMessageFor(m => m.Email)
					</div>

					<div class="form-group has-feedback">
						@Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Địa chỉ" })
						@Html.ValidationMessageFor(m => m.Address)
					</div>

					<!-- /.col -->
					<div class="col-4">
						<button type="submit" class="btn btn-primary btn-block btn-flat">Create...</button>
					</div>
					<!-- /.col -->
					<div class="form-group has-feedback">
						@if (ViewBag.thanhcong == true)
						{
							<span style="color:aqua">Tài khoản tạo thành công</span>
							<span style=""><a href="/Account/Login">Login</a></span>
						}
					</div>

				</form>

			</div>
		</div>
	</div>

	<script src="~/Content/login/jquery.min.js"></script>

	<!-- Bootstrap 4 -->
	<script src="~/Content/login/bootstrap.bundle.min.js"></script>

	<!-- iCheck -->
	<script src="~/Content/login/icheck.min.js"></script>

