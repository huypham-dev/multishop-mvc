@model IEnumerable<Shop_Ban_Hang.Models.Category>

<div class="nn-block">
    <div class="nn-megamenu-sidebar-title"><i class="glyphicon glyphicon-list"></i><h2>Sản Phẩm</h2></div>
    @foreach (var category in Model)
    {
        <div class="nn-megamenu-sidebar">
               <ul>
                    <li>
                        <a href="/Product/GetProduct?categoryID=@category.Id">
                            @*<span class="col-md-3"><img src="~/Content/img/categories/@category.Icon" class="img-responsive" /></span>*@
                            <span class="col-md-3"><img src="~/Content/img/icons/items.png" class="img-responsive" /></span>
                            <h5 class="col-md-9"><strong class="">@category.NameVN</strong></h5>
                        </a>
                    </li>
                </ul>
         </div>
    }
    
</div><!--end block category-->

