@model Shop_Ban_Hang.Models.Order

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Đặt hàng</h2>

@using (Html.BeginForm("Purchase", "Order"))
{
    @Html.ValidationSummary(true)
<div class="form-horizontal">


    <div class="form-group">
        <label class="control-label col-md-2">Tên :</label>
        <div class="col-md-10">
            <span>
                @Html.TextBoxFor(model => model.CustomerId, new { @class = "form-control", @readonly = "true" })
                @Html.ValidationMessageFor(m => m.CustomerId)
            </span>
           
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Tên đầy đủ :</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Receiver, new { @class = "form-control", @readonly = "true" })
            @Html.ValidationMessageFor(m => m.Receiver)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ngày đặt hàng :</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.OrderDate, new { @class = "form-control", @readonly = "true" })
            @Html.ValidationMessageFor(m => m.OrderDate)

        </div>
    </div>




    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ :</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Address, new { @class = "form-control",@required="true" })
            @Html.ValidationMessageFor(m => m.Address)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tổng tiền : </label>
        <div class="col-md-10">
           @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @readonly = "true" })
            @Html.ValidationMessageFor(m => m.Amount)
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-2">Mô tả : </label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "5" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xác nhận" class="btn btn-default" />
        </div>
    </div>
</div>
}
